{
    "name": "xrelease",
    "version": "0.1.0",
    "description": "A reusable release infrastructure toolkit for Node.js projects",
    "main": "dist/index.js",
    "bin": {
        "xrelease": "./dist/cli/index.js"
    },
    "type": "module",
    "scripts": {
        "build": "tsc",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "lint": "eslint .",
        "format": "prettier --write .",
        "prepare": "husky install"
    },
    "keywords": [
        "release",
        "toolkit",
        "ci",
        "cd",
        "automation",
        "versioning",
        "changelog"
    ],
    "author": "Anand Kamat",
    "license": "MIT",
    "dependencies": {
        "chalk": "^5.3.0",
        "commander": "^11.1.0",
        "execa": "^8.0.1",
        "glob": "^10.3.10",
        "inquirer": "^9.2.15",
        "ora": "^8.0.1",
        "standard-version": "^9.5.0",
        "yaml": "^2.4.0"
    },
    "devDependencies": {
        "@types/inquirer": "^9.0.7",
        "@types/node": "^20.11.24",
        "@typescript-eslint/eslint-plugin": "^7.1.1",
        "@typescript-eslint/parser": "^7.1.1",
        "@vitest/coverage-v8": "^1.3.1",
        "eslint": "^8.57.0",
        "husky": "^9.0.11",
        "prettier": "^3.2.5",
        "typescript": "^5.3.3",
        "vitest": "^1.3.1"
    },
    "engines": {
        "node": ">=18"
    }
}